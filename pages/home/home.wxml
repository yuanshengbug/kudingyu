<!--pages/home/home.wxml-->
<view>
  <!-- 轮播图 -->
  <swiper indicator-dots='{{true}}' autoplay='{{true}}' interval='{{3000}}' duration='{{1000}}' indicator-active-color='#fff' circular>
    <block wx:for="{{swipers}}" wx:key="{{item.id}}">
      <swiper-item>
        <image src="{{item.img_url}}"></image>
      </swiper-item>
    </block>
  </swiper>
</view>
